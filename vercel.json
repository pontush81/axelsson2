{
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    { "source": "/systemgemensamt", "destination": "/systemgemensamt.html" },
    { "source": "/time", "destination": "/time.html" },
    { "source": "/employee", "destination": "/employee.html" },
    { "source": "/travel-expense", "destination": "/travel-expense.html" },
    { "source": "/payroll", "destination": "/payroll.html" },
    { "source": "/plan", "destination": "/plan.html" }
  ],
  "functions": {
    "api/update.py": {
      "maxDuration": 300,
      "memory": 1024
    },
    "api/get_token.py": {
      "maxDuration": 10,
      "memory": 256
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}
